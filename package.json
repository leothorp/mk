{
  "name": "@leothorp/mk",
  "version": "0.1.4",
  "description": "Project-level task automation with less typing.",
  "main": "src/index.js",
  "bin": {
    "@leothorp/mk": "bin/mk.js",
    "mk": "bin/mk.js"
  },
  "files": [
    "bin/*",
    "src/*"
  ],
  "scripts": {
    "start": "node ./bin/mk.js",
    "run-mk": "NODE_ENV=development node ./bin/mk.js",
    "test": "cd test/_test-proj-fixture && NODE_ENV=development node ../basic.test.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "leothorp",
  "license": "MIT",
  "dependencies": {
    "glob": "^7.1.7",
    "js-yaml": "^4.1.0",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "pretty-quick": "^3.1.1"
  }
}
