{
  "name": "@leothorp/mk",
  "version": "0.1.0",
  "description": "Project-level task automation for those who don't want to type.",
  "main": "index.js",
  "bin": {
    "mk": "./bin/mk.js"
  },
  "files": [
    "./bin/*",
    "./src/*"
  ],
  "pkg": {
    "scripts": [],
    "assets": "views/**/*",
    "targets": [
      "node14-linux-arm64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "start": "node ./bin/mk.js",
    "run-mk": "NODE_ENV=development node ./bin/mk.js",
    "build": "npm test && bash ./scripts/build.sh",
    "build-publish": "npm test && bash ./scripts/build.sh",
    "test": "cd test/_test-proj-fixture && NODE_ENV=development node ../basic.test.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "author": "leothorp",
  "license": "MIT",
  "dependencies": {
    "glob": "^7.1.7",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "pretty-quick": "^3.1.1"
  }
}
